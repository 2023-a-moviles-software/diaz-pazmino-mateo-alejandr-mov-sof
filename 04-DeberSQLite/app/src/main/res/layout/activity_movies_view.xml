<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_movies_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activies.MoviesView">

    <TextView
        android:id="@+id/tv_titulo_peliculas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Peliculas"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_movies"
        app:layout_constraintEnd_toEndOf="@+id/lv_movies"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/lv_movies" />

    <Button
        android:id="@+id/btn_crear_pelicula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/lv_movies"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/lv_movies"
        app:layout_constraintTop_toBottomOf="@+id/lv_movies" />

    <ListView
        android:id="@+id/lv_movies"
        android:layout_width="323dp"
        android:layout_height="326dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>